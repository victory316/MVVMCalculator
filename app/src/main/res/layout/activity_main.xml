<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>
        <variable
            name="viewModel"
            type="com.example.mvvmcalculator.viewmodel.MainViewModel" />
    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".view.MainActivity">

        <TextView
            android:id="@+id/number_text_view"
            android:layout_width="match_parent"
            android:layout_height="100dp"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_margin="10dp"
            android:padding="10dp"
            android:gravity="end"
            android:textSize="35sp"
            android:text="@={viewModel.currentInput}" />

        <GridLayout
            android:id="@+id/button_grid_layout"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:columnCount="4"
            android:orientation="horizontal"
            android:rowCount="4"
            android:layout_margin="10dp"
            android:padding="10dp"
            android:alignmentMode="alignBounds"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toBottomOf="@id/number_text_view">

            <Button
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:layout_gravity="fill"
                android:layout_columnWeight="1"
                android:layout_rowWeight="1"
                android:onClick="@{() -> viewModel.doAC()}"
                android:padding="5dp"
                android:text="C"
                android:textSize="18sp" />

            <Button
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:layout_columnWeight="1"
                android:layout_rowWeight="1"
                android:layout_gravity="fill"
                android:padding="5dp"
                android:text=""
                android:textSize="18sp" />

            <Button
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:layout_columnWeight="1"
                android:layout_rowWeight="1"
                android:layout_gravity="fill"
                android:padding="5dp"
                android:textSize="18sp" />

            <Button
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:layout_columnWeight="1"
                android:layout_rowWeight="1"
                android:layout_gravity="fill"
                android:onClick="@{() -> viewModel.doOperation(4)}"
                android:padding="5dp"
                android:text="รท"
                android:textSize="18sp" />

            <Button
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:layout_columnWeight="1"
                android:layout_rowWeight="1"
                android:layout_gravity="fill"
                android:onClick="@{() -> viewModel.inputNumber(7)}"
                android:padding="5dp"
                android:text="7"
                android:textSize="18sp" />

            <Button
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:layout_columnWeight="1"
                android:layout_rowWeight="1"
                android:layout_gravity="fill"
                android:onClick="@{() -> viewModel.inputNumber(8)}"
                android:padding="5dp"
                android:text="8"
                android:textSize="18sp" />

            <Button
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:layout_columnWeight="1"
                android:layout_rowWeight="1"
                android:layout_gravity="fill"
                android:onClick="@{() -> viewModel.inputNumber(9)}"
                android:padding="5dp"
                android:text="9"
                android:textSize="18sp" />

            <Button
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:layout_columnWeight="1"
                android:layout_rowWeight="1"
                android:layout_gravity="fill"
                android:onClick="@{() -> viewModel.doOperation(3)}"
                android:padding="5dp"
                android:text="x"
                android:textSize="18sp" />

            <Button
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:layout_columnWeight="1"
                android:layout_rowWeight="1"
                android:layout_gravity="fill"
                android:onClick="@{() -> viewModel.inputNumber(4)}"
                android:padding="5dp"
                android:text="4"
                android:textSize="18sp" />

            <Button
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:layout_columnWeight="1"
                android:layout_rowWeight="1"
                android:layout_gravity="fill"
                android:onClick="@{() -> viewModel.inputNumber(5)}"
                android:padding="5dp"
                android:text="5"
                android:textSize="18sp" />

            <Button
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:layout_columnWeight="1"
                android:layout_rowWeight="1"
                android:layout_gravity="fill"
                android:onClick="@{() -> viewModel.inputNumber(6)}"
                android:padding="5dp"
                android:text="6"
                android:textSize="18sp" />

            <Button
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:layout_columnWeight="1"
                android:layout_rowWeight="1"
                android:layout_gravity="fill"
                android:onClick="@{() -> viewModel.doOperation(2)}"
                android:padding="5dp"
                android:text="-"
                android:textSize="18sp" />

            <Button
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:layout_columnWeight="1"
                android:layout_rowWeight="1"
                android:layout_gravity="fill"
                android:onClick="@{() -> viewModel.inputNumber(1)}"
                android:padding="5dp"
                android:text="1"
                android:textSize="18sp" />

            <Button
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:onClick="@{() -> viewModel.inputNumber(2)}"
                android:padding="5dp"
                android:layout_columnWeight="1"
                android:layout_rowWeight="1"
                android:layout_gravity="fill"
                android:text="2"
                android:textSize="18sp" />

            <Button
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:onClick="@{() -> viewModel.inputNumber(3)}"
                android:padding="5dp"
                android:layout_columnWeight="1"
                android:layout_rowWeight="1"
                android:layout_gravity="fill"
                android:text="3"
                android:textSize="18sp" />

            <Button
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:onClick="@{() -> viewModel.doOperation(1)}"
                android:padding="5dp"
                android:layout_columnWeight="1"
                android:layout_rowWeight="1"
                android:layout_gravity="fill"
                android:text="+"
                android:textSize="18sp" />

            <Button
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:layout_columnWeight="1"
                android:layout_rowWeight="1"
                android:layout_gravity="fill"
                android:padding="5dp"
                android:textSize="18sp" />

            <Button
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:layout_columnWeight="1"
                android:layout_rowWeight="1"
                android:layout_gravity="fill"
                android:onClick="@{() -> viewModel.inputNumber(0)}"
                android:padding="5dp"
                android:text="0"
                android:textSize="18sp" />

            <Button
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:layout_columnWeight="1"
                android:layout_rowWeight="1"
                android:layout_gravity="fill"
                android:onClick="@{() -> viewModel.inputNumber(-1)}"
                android:padding="5dp"
                android:text="."
                android:textSize="18sp" />

            <Button
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:layout_columnWeight="1"
                android:layout_rowWeight="1"
                android:layout_gravity="fill"
                android:onClick="@{() -> viewModel.getTheResult()}"
                android:padding="5dp"
                android:text="="
                android:textSize="18sp" />
        </GridLayout>

    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>